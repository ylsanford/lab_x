<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => Patient %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_first_name) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_first_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_last_name) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_last_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_middle_name) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_middle_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_birthday) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_birthday %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_address) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_address %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_address_2) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_address_2 %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_city) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_city %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_state) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_state %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:p_zip_code) %></dt>
      <dd><pre class="prettyprint"><%= @patient.p_zip_code %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              patients_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_patient_path(@patient), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              patient_path(@patient),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

